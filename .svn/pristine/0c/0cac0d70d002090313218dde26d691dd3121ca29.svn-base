<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn" %>

<!DOCTYPE html>
<html lang="ko">

<head>
	<!-- head 부분 분리 -->
	<jsp:include page="../common/head.jsp"></jsp:include>
</head>

<body id="page-top">

    <!-- 전체 Wrapper 시작 -->
    <div id="wrapper">
		
		<!-- 사이드바 분리 -->
		<jsp:include page="../common/sidebar.jsp"></jsp:include>
		
        <!-- 컨텐츠 Wrapper 시작 -->
        <div id="content-wrapper" class="d-flex flex-column bg-custom-blue">

            <!-- 메인 컨텐츠 시작 -->
            <div id="content">
		
				<!-- 탑바 분리 -->
				<jsp:include page="../common/topbar.jsp"></jsp:include>

                <!-- 페이지 컨텐츠 시작 -->
                <div class="container">
                
                	<!-- 여기 내부 부분을 작업하면 됩니다 -->
                    <h3 class="board-title"><strong>자주 묻는 질문</strong></h3>
                    <h5>문의유형을 선택하시면 유형에 따라 자주 묻는 질문에 대한 답변을 보실 수 있습니다.</h5>
                    <div class="d-flex justify-content-center">
	                    <div class="input-group mb-3 mt-5 search-w-500">
						  <input id="searchTxt" name="searchTxt" type="text" class=" form-control rounded-3 bg-dark border-0" placeholder="검색어를 입력하세요." aria-label="search-qna" aria-describedby="button-addon2">
						  <button class="btn btn-primary" type="button" id="button-addon2" onclick="ajax_call()"><i class="fas fa-search" style="color: #bdbdbd;"></i></button>
						</div>
					</div>
					<div class="d-flex justify-content-center m-3">
						<input type="hidden" id="boardSubCategory" name="boardSubCategory">
						<button onclick="categoryBtn('all')" type="button" class="btn btn-primary mr-3">전체</button>
						<button onclick="categoryBtn('account')" type="button" class="btn btn-primary mr-3">계정관련</button>
						<button onclick="categoryBtn('pay')" type="button" class="btn btn-primary mr-3">결제관련</button>
						<button onclick="categoryBtn('howTo')" type="button" class="btn btn-primary mr-3">이용방법</button>
						<button onclick="categoryBtn('install')" type="button" class="btn btn-primary">설치관련</button>
					</div>
					<div id="faqDataList">
	               		<c:forEach items="${boardList}" var="boardData">
					        <div class="accordion mt-5 " id="accordionBoard">
					            <!-- 게시물 1 -->
					            <div class="card border-0">
					                <div class="card-header border-0 d-flex justify-content-between bg-color p-0" id="headingOne">
					                    <div class="d-flex align-center justify-start">
						                    <button class="btn bg-dark text-light mr-3" disabled>${boardData.boardSubCategory}</button>
						                    <h3 class="mb-0 text-light justify-content mt-1">
						                    	${boardData.boardTitle}
						                    </h3>
					                    </div>
					                        <button class="btn outline" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
					                            <i class="fas fa-chevron-down" style="color: #0275d8;"></i>
					                        </button>
					                </div>
					                <div id="collapseOne" class="p-0 collapse bg-color" aria-labelledby="headingTwo" data-parent="#accordionBoard">
					                    <div class="card-body">
					                      ${boardData.boardContent}
					                    </div>
					                </div>
					            </div>   
							
							<hr class="board-line mt-4 mb-4">
							</div>
						</c:forEach>
					</div>
                <!-- 페이지 컨텐츠 끝 -->
            </div>
            <!-- 메인 컨텐츠 끝 -->

        </div>
        <!-- 컨텐츠 Wrapper 끝 -->

    </div>
    <!-- 전체 Wrapper 끝 -->

    <!-- 맨 위로 스크롤 버튼 -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

	<!-- 모달 JSP 삽입 -->
	<jsp:include page="../common/modal.jsp"></jsp:include>
</body>
<script type="text/javascript">
function categoryBtn(val){
	$('#boardSubCategory').val(val);
	
	console.log("=========")
	console.log(val)
	console.log($('#boardSubCategory').val())
}
function ajax_call(){
	$.ajax({
		type:"POST",
		url:"/board/faq",
		data:{
			searchTxt: $('#searchTxt').val(),
			boardSubCategory: $('#boardSubCategory').val()
		},
		dataType:"html",
		success:function(result){
			$('#faqDataList').empty();
			if(result){
				console.log(result);
				$('#faqDataList').html(result);
			}
		}
	})
}
</script>

</html>
