@charset "UTF-8";

/* 폰트적용 프리텐다드 폰트*/
@font-face {
	font-family: 'Pretendard-Regular';
	src:
		url('https://cdn.jsdelivr.net/gh/Project-Noonnu/noonfonts_2107@1.1/Pretendard-Regular.woff')
		format('woff');
	font-weight: 400;
	font-style: normal;
}

body {
	font-family: 'Pretendard-Regular';
}

/* 커스텀 색상 관련 */
/* 최대한 기존 부트스트랩 4 클래스 색상과 비슷하게 하겠음 */
.bg-custom-black {
	background-color: #18181b !important;
}

.bg-custom-blue {
	background-color: #121212 !important;
}

.bg-custom-review {
	background-color: #16202D !important;
}

.bg-custom-gray {
	background-color: #202020 !important;
}

.filter-invert {
	filter: invert(1);
}

.box-shadow-custom-black {
	box-shadow: 0 0 5px #18181b;
}

.one-line-ellipsis {
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.two-line-ellipsis {
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}

.h-custom-80 {
	height: 80px;
}

.h-custom-50 {
	height: 50px;
}

.h-custom-40 {
	height: 40px;
}

.h-custom-30 {
	height: 30px;
}

.w-custom-50 {
	width: 50px;
}

.hover-box-shadow-white {
	transition: box-shadow 0.3s;
}

.hover-box-shadow-white:hover {
	box-shadow: 0 0 5px #2753cd;
}

.sidebar .nav-item .nav-link i {
	font-size: 1rem;
	margin-right: .25rem
}

.sidebar .nav-item .nav-link span {
	font-size: 1rem;
	display: inline
}

.line-through-custom {
	text-decoration: line-through;
}

.checkbox-wrap-custom {
	height: 70px;
	overflow: hidden;
	overflow-y: scroll;
}

.card-img-top-custom {
	height: 9rem;
	object-fit: cover;
}

.aspect-ratio-custom {
	aspect-ratio: 16/9;
	object-fit: contain;
}

.border-color-custom {
	border-color: rgba(255, 255, 255, 0.1);
}

.border-radius-4-custom {
	border-radius: 4px;
}

.border-width-custom {
	border-width: 2px;
	box-sizing: border-box;
}

.rating-star-container {
	display: inline-block;
	width: 100px;
	height: 20px;
	background: url("../img/no-star.svg") repeat-x;
	background-size: 20px;
}

.rating-star-container .rating-star-num {
	width: 100%;
	height: 100%;
	content: '';
	display: block;
	background: url("../img/star.svg") repeat-x;
	background-size: 20px;
}

.game-info-text-custom {
	font-size: 0.95rem;
	font-weight: bold;
}

.top-70-custom {
	top: 70px;
}

.product-description {
	overflow: hidden;
}

.product-description img {
	width: 100% !important;
	margin-top: 1rem;
	margin-bottom: 1rem;
}

/* 스크롤바 숨기기 */
body {
	-ms-overflow-style: none;
}

::-webkit-scrollbar {
	display: none;
}

.mr-1-custom {
	margin-right: 1px;
}

.font-small-custom {
	font-size: 0.95rem;
}

.font-smaller-custom {
	font-size: 0.9rem;
}

.font-large-custom {
	font-size: 1.1rem;
}

.font-size-85-custom {
	font-size: 85%;
}

.w-30-custom {
	width: 30% !important;
}

.w-70-custom {
	width: 70% !important;
}

.svg-icon-20-custom {
	display: block;
	line-height: 0;
	width: 20px;
	height: 20px;
	color: inherit;
}

.hover-bright-custom {
	filter: brightness(1);
	transition: filter 0.5s ease;
}

.hover-bright-custom:hover {
	filter: brightness(1.2);
}

/* QnA_Board */
.bg-color {
	background-color: #121212;
}

.board-title {
	margin-top: 2rem;
	color: #ffffff;
}

.vertical-line {
	border-left: 1px solid #717171;
}

.board-content {
	color: #ffffff;
	margin-top: 1rem;
	margin-bottom: 1rem;
	margin-left: 0;
	margin-right: 0;
}

.board-table-title {
	text-align: center;
	margin-bottom: .5rem;
	background-color: #26272B;
	border-radius: 8px;
	height: 3rem;
}

.board-line {
	margin-top: 0;
	margin-bottom: 0;
	border: .1px solid #717171;
	margin-left: 0;
	margin-right: 0;
}

.wait-answer {
	padding-bottom: 0;
	padding-top: 0;
	margin-top: 12px;
	text-align: center;
	display: block;
	border-radius: 5px;
	color: #ffffff;
}

.done-answer {
	padding-bottom: 0;
	padding-top: 0;
	margin-top: 12px;
	text-align: center;
	display: block;
	background: red;
	border-radius: 5px;
	color: #ffffff;
	height: auto;
}

.qna-write {
	margin-top: 1.5rem;
	margin-bottom: 1rem;
}

.table thead th {
	border-bottom: 0;
}

.table td, .table th {
	border-top: 0;
}

/*hr라인 회색*/
.line {
	margin-left: 0;
	margin-right: 0;
	border-bottom: 1px solid #717171;
}

/*텍스트 중앙정렬 */
.text-align-center {
	text-align: center;
}

/*검색창 폭 500 */
.search-w-500 {
	width: 500px;
}

/* 텍스트그림자 */
.text-shadow {
	text-shadow: 2px 2px 3px rgba(0, 0, 0, 1);
	color: #ffffff;
}

.none-answer {
	border-radius: 8px;
}

/* 화면 너비가 1000px 미만일 때 (작은 화면) */
@media ( max-width : 1000px) {
	.card-custom {
		height: auto; /* 자동 높이 설정 */
	}
}

/* 화면 너비가 1000px 이상일 때 (중간과 큰 화면) */
@media ( min-width : 1000px) {
	.card-custom {
		height: 300px;
	}
}
.tooltip{
	width: 44px;
	opacity: 1;
}
